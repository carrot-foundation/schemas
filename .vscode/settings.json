{
  "eslint.validate": ["yaml", "json"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "cSpell.words": [
    "ANTT",
    "carrot",
    "CETESB",
    "EIP-712",
    "ipfs",
    "keccak256",
    "MassID",
    "offchain"
  ],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
