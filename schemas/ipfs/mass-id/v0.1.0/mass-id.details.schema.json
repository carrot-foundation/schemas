{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/carrot-foundation/schemas/refs/heads/main/schemas/ipfs/mass-id/v0.1.0/mass-id.details.schema.json",
  "title": "MassID Data",
  "type": "object",
  "required": [
    "waste_classification",
    "locations",
    "participants",
    "chain_of_custody",
    "geographic_data"
  ],
  "properties": {
    "waste_classification": {
      "type": "object",
      "title": "Waste Classification",
      "description": "Standardized waste material classification and regulatory information.",
      "required": ["primary_type", "subtype", "measurement_unit", "net_weight"],
      "properties": {
        "primary_type": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/waste_type"
        },
        "subtype": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/waste_subtype"
        },
        "local_classification": {
          "type": "object",
          "description": "Local or regional waste classification codes and descriptions.",
          "required": ["code", "description", "system"],
          "title": "Local Waste Classification",
          "properties": {
            "code": {
              "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
              "maxLength": 20,
              "title": "Local Waste Classification Code",
              "example": "04 02 20"
            },
            "description": {
              "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
              "maxLength": 200,
              "title": "Local Waste Classification Description",
              "example": "Lodos do tratamento local de efluentes n√£o abrangidas em 04 02 19"
            },
            "system": {
              "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
              "maxLength": 50,
              "title": "Local Waste Classification System",
              "description": "Classification system name (e.g., 'Ibama Waste Code', 'European Waste Catalogue', 'US EPA Codes').",
              "example": "Ibama Waste Code"
            }
          },
          "additionalProperties": false
        },
        "measurement_unit": {
          "type": "string",
          "enum": ["kg", "ton"],
          "description": "Unit of measurement for the waste quantity.",
          "example": "kg"
        },
        "net_weight": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_negative_float",
          "description": "Net weight of the waste batch in the specified measurement unit."
        },
        "contamination_level": {
          "type": "string",
          "enum": ["None", "Low", "Medium", "High"],
          "description": "Level of contamination in the waste batch.",
          "example": "Low"
        }
      },
      "additionalProperties": false
    },
    "locations": {
      "type": "array",
      "title": "MassID Locations",
      "description": "All locations referenced in this MassID, indexed by ID",
      "minItems": 1,
      "items": {
        "$ref": "../../shared/entities/location/v0.1.0/location.schema.json"
      }
    },
    "participants": {
      "type": "array",
      "title": "MassID Participants",
      "description": "All participants referenced in this MassID, indexed by ID",
      "minItems": 1,
      "items": {
        "$ref": "../../shared/entities/participant/v0.1.0/participant.schema.json"
      }
    },
    "chain_of_custody": {
      "type": "object",
      "title": "MassID Chain of Custody",
      "description": "Complete chain of custody tracking from waste generation to final processing.",
      "required": ["events", "total_distance_km", "total_duration_hours"],
      "properties": {
        "events": {
          "type": "array",
          "minItems": 1,
          "title": "MassID Chain of Custody Events",
          "description": "Chronological sequence of custody transfer and processing events.",
          "items": {
            "type": "object",
            "title": "MassID Chain of Custody Event",
            "required": [
              "event_id",
              "event_name",
              "description",
              "timestamp",
              "participant_id",
              "location_id"
            ],
            "properties": {
              "event_id": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
                "title": "Event ID",
                "description": "Unique event identifier."
              },
              "event_name": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                "maxLength": 50,
                "title": "Event Name",
                "description": "Name of custody or processing event.",
                "example": "Pick-up"
              },
              "description": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                "maxLength": 200,
                "title": "Event Description",
                "description": "Detailed description of what happened during this event.",
                "example": "Waste collected from restaurant kitchen using refrigerated truck"
              },
              "timestamp": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/iso_timestamp",
                "title": "Event Timestamp",
                "description": "ISO 8601 timestamp when the event occurred."
              },
              "participant_id": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
                "title": "Event Participant ID",
                "description": "Reference to participant in the participants array"
              },
              "location_id": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
                "title": "Event Location ID",
                "description": "Reference to location in the locations array"
              },
              "weight": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_negative_float",
                "title": "MassID Weight",
                "description": "Mass weight after this event."
              },
              "attributes": {
                "type": "array",
                "title": "Event Attributes",
                "description": "Additional attributes specific to this event.",
                "items": {
                  "type": "object",
                  "required": ["name", "value"],
                  "properties": {
                    "name": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                      "maxLength": 100,
                      "title": "Event Attribute Name",
                      "example": "Vehicle License Plate"
                    },
                    "value": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "number" },
                        { "type": "boolean" }
                      ],
                      "title": "Event Attribute Value",
                      "example": "QLU-4552"
                    },
                    "format": {
                      "type": "string",
                      "enum": [
                        "KILOGRAM",
                        "DATE",
                        "CURRENCY",
                        "PERCENTAGE",
                        "COORDINATE"
                      ],
                      "title": "Event Attribute Format",
                      "description": "Data format hint for proper display.",
                      "example": "KILOGRAM"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "documentation": {
                "type": "array",
                "title": "Event Documentation",
                "description": "Associated documentation for this event.",
                "items": {
                  "type": "object",
                  "required": ["type", "reference"],
                  "properties": {
                    "type": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                      "maxLength": 50,
                      "title": "Documentation Type",
                      "description": "Type of supporting documentation.",
                      "example": "Transport Manifest"
                    },
                    "document_number": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                      "maxLength": 50,
                      "title": "Document Number",
                      "description": "Official document number if applicable.",
                      "example": "MTR-4126"
                    },
                    "reference": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                      "title": "Documentation Reference",
                      "description": "Reference to document (IPFS hash, file name, or external URL).",
                      "example": "transport-manifest.pdf"
                    },
                    "issue_date": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/iso_date",
                      "title": "Document Issue Date",
                      "description": "Date the document was issued."
                    },
                    "issuer": {
                      "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                      "maxLength": 100,
                      "title": "Document Issuer",
                      "description": "Entity that issued the document.",
                      "example": "Transport Authority"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "notes": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                "maxLength": 500,
                "title": "Event Notes",
                "description": "Additional notes or comments about this event.",
                "example": "Delay due to traffic conditions"
              }
            },
            "additionalProperties": false
          }
        },
        "total_distance_km": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_negative_float",
          "title": "Total Distance Traveled (km)",
          "description": "Total distance traveled across all transport events.",
          "example": 45.2
        },
        "total_duration_hours": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/hours",
          "title": "Total Duration of Transport (hours)",
          "description": "Total time from first to last event in hours.",
          "example": 72.5
        }
      },
      "additionalProperties": false
    },
    "geographic_data": {
      "type": "object",
      "title": "MassID Geographic Data",
      "description": "Geographic information about waste origin and processing locations.",
      "required": [
        "origin_location_id",
        "final_destination_id",
        "transport_routes"
      ],
      "properties": {
        "origin_location_id": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
          "title": "Origin Location ID",
          "description": "Reference to origin location in the locations array"
        },
        "processing_locations_ids": {
          "type": "array",
          "title": "Processing Locations IDs",
          "description": "Locations where the waste was processed or handled.",
          "items": {
            "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
            "description": "Reference to processing location in the locations array"
          }
        },
        "final_destination_id": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
          "title": "Final Destination ID",
          "description": "Reference to final destination in the locations array"
        },
        "transport_routes": {
          "type": "array",
          "title": "Transport Routes",
          "description": "Detailed transport route information.",
          "items": {
            "type": "object",
            "required": [
              "from_location_id",
              "to_location_id",
              "distance_km",
              "transport_method",
              "duration_hours"
            ],
            "properties": {
              "from_location_id": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
                "title": "Route Segment Origin Location ID",
                "description": "Reference to the origin location in the locations array"
              },
              "to_location_id": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/uuid",
                "title": "Route Segment Destination Location ID",
                "description": "Reference to the destination location in the locations array"
              },
              "distance_km": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_negative_float",
                "title": "Route Segment Distance Traveled (km)",
                "description": "Distance for this route segment in kilometers.",
                "example": 45.2
              },
              "transport_method": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/non_empty_string",
                "maxLength": 50,
                "title": "Route Segment Transport Method",
                "description": "Method of transportation for this segment.",
                "example": "Truck"
              },
              "duration_hours": {
                "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/hours",
                "title": "Route Segment Duration of Transport (hours)",
                "description": "Time taken for this route segment in hours.",
                "example": 2.5
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
