{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/carrot-foundation/schemas/refs/heads/main/schemas/ipfs/mass-id/v0.1.0/mass-id.attributes.schema.json",
  "$defs": {
    "attribute_waste_type": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Waste Type"
        },
        "value": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/waste_type"
        }
      },
      "additionalProperties": false
    },
    "attribute_waste_subtype": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Waste Subtype"
        },
        "value": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/waste_subtype"
        }
      },
      "additionalProperties": false
    },
    "attribute_weight": {
      "type": "object",
      "required": ["trait_type", "value", "display_type"],
      "properties": {
        "trait_type": {
          "const": "Weight (kg)"
        },
        "value": {
          "$ref": "../../shared/definitions/v0.1.0/definitions.schema.json#/$defs/weight_kg"
        },
        "display_type": {
          "const": "number"
        }
      },
      "additionalProperties": false
    },
    "attribute_origin_country": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Origin Country"
        },
        "value": {
          "type": "string",
          "maxLength": 100,
          "description": "Country where the waste was generated",
          "example": "Brazil"
        }
      },
      "additionalProperties": false
    },
    "attribute_origin_municipality": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Origin Municipality"
        },
        "value": {
          "type": "string",
          "maxLength": 100,
          "description": "Municipality where the waste was generated",
          "example": "Macapá"
        }
      },
      "additionalProperties": false
    },
    "attribute_origin_division": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Origin Administrative Division"
        },
        "value": {
          "type": "string",
          "maxLength": 100,
          "description": "Administrative division (state/province) where the waste was generated",
          "example": "Amapá"
        }
      },
      "additionalProperties": false
    },
    "attribute_recycler": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Recycler"
        },
        "value": {
          "type": "string",
          "maxLength": 100,
          "description": "Organization that processed the waste",
          "example": "Eco Reciclagem"
        }
      },
      "additionalProperties": false
    },
    "attribute_integrator": {
      "type": "object",
      "required": ["trait_type", "value"],
      "properties": {
        "trait_type": {
          "const": "Integrator"
        },
        "value": {
          "type": "string",
          "maxLength": 100,
          "description": "Organization that integrated the waste into the Carrot network",
          "example": "Carrot Foundation"
        }
      },
      "additionalProperties": false
    },
    "attribute_pickup_date": {
      "type": "object",
      "required": ["trait_type", "value", "display_type"],
      "properties": {
        "trait_type": {
          "const": "Pick-up Date"
        },
        "value": {
          "type": "string",
          "format": "date",
          "description": "Date when the waste was picked up from the source",
          "example": "2024-12-05"
        },
        "display_type": {
          "const": "date"
        }
      },
      "additionalProperties": false
    },
    "attribute_recycling_date": {
      "type": "object",
      "required": ["trait_type", "value", "display_type"],
      "properties": {
        "trait_type": {
          "const": "Recycling Date"
        },
        "value": {
          "type": "string",
          "format": "date",
          "description": "Date when the waste was recycled/processed",
          "example": "2025-02-22"
        },
        "display_type": {
          "const": "date"
        }
      },
      "additionalProperties": false
    }
  },
  "title": "MassID NFT Attribute Array",
  "description": "Schema for the fixed set of MassID NFT attributes, enforcing order and type for each trait.",
  "type": "array",
  "prefixItems": [
    { "$ref": "#/$defs/attribute_waste_type" },
    { "$ref": "#/$defs/attribute_waste_subtype" },
    { "$ref": "#/$defs/attribute_weight" },
    { "$ref": "#/$defs/attribute_origin_country" },
    { "$ref": "#/$defs/attribute_origin_municipality" },
    { "$ref": "#/$defs/attribute_origin_division" },
    { "$ref": "#/$defs/attribute_recycler" },
    { "$ref": "#/$defs/attribute_integrator" },
    { "$ref": "#/$defs/attribute_pickup_date" },
    { "$ref": "#/$defs/attribute_recycling_date" }
  ],
  "items": false,
  "minItems": 10,
  "maxItems": 10
}
