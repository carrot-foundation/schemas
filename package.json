{
  "name": "@carrot-foundation/schemas",
  "version": "0.1.33",
  "description": "Carrot schema definitions and zod validation schemas",
  "license": "Apache-2.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./schemas/*": {
      "import": "./schemas/*",
      "require": "./schemas/*",
      "default": "./schemas/*"
    }
  },
  "files": [
    "dist/**/*",
    "schemas/**/*"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "carrot",
    "ipfs",
    "schema",
    "validation",
    "zod",
    "typescript",
    "blockchain",
    "json-schema"
  ],
  "author": "Carrot Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/carrot-foundation/schemas.git"
  },
  "scripts": {
    "build": "tsup",
    "check": "pnpm lint:fix && pnpm format && pnpm type-check && pnpm spell-check && pnpm pkgJsonLint && pnpm build && pnpm validate-schemas && pnpm verify-schema-versions && pnpm check-refs && pnpm test",
    "check-refs": "node scripts/check-refs.js",
    "check:parallel": "concurrently -n lint:fix,format,type-check,spell-check,pkgJsonLint,test,build,validate-schemas,verify-schema-versions,check-refs \"pnpm lint:fix\" \"pnpm format\" \"pnpm type-check\" \"pnpm spell-check\" \"pnpm pkgJsonLint\" \"pnpm test\" \"pnpm build\" \"pnpm validate-schemas\" \"pnpm verify-schema-versions\" \"pnpm check-refs\"",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-ipfs-schemas": "node scripts/generate-ipfs-schemas.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pkgJsonLint": "npmPkgJsonLint .",
    "prebuild": "pnpm clean",
    "pregenerate-ipfs-schemas": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "spell-check": "cspell lint --no-must-find-files \"src/**/*\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "validate-schemas": "node scripts/validate-schemas.js",
    "verify-schema-versions": "node scripts/verify-schema-versions.js"
  },
  "dependencies": {
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@cspell/dict-pt-br": "2.4.2",
    "@eslint/js": "9.39.1",
    "@tsconfig/recommended": "1.0.13",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "concurrently": "9.2.1",
    "cspell": "9.4.0",
    "eslint": "9.39.1",
    "eslint-plugin-vitest-globals": "1.5.0",
    "glob": "13.0.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "npm-package-json-lint": "9.0.0",
    "npm-package-json-lint-config-default": "8.0.1",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vitest": "4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
